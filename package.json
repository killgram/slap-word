{
  "name": "SlapWord",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "ios": "react-native run-ios --scheme \"SlapWord.dev\"",
    "ios:release:debug": "react-native run-ios --scheme \"SlapWord.dev\" --configuration Release",
    "ios:debug:prod": " react-native run-ios --scheme \"SlapWord.prod\"",
    "ios:release:prod": " react-native run-ios --scheme \"SlapWord.prod\" --configuration Release",
    "android": "ENVFILE=.env.development react-native run-android",
    "android:release:dev": "ENVFILE=.env.development react-native run-android --variant release",
    "android:prod": "ENVFILE=.env.production react-native run-android",
    "android:release:prod": "ENVFILE=.env.production react-native run-android --variant release",
    "start": "watchman watch-del-all && react-native start --reset-cache",
    "clean": "watchman watch-del-all",
    "link": "react-native link && react-native unlink react-native-vector-icons",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "bundleRelease": "cd android && ./gradlew clean && ./gradlew bundleRelease",
    "assembleRelease": "cd android && ./gradlew clean && ./gradlew assembleRelease"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.17.10",
    "@react-navigation/native": "^6.0.13",
    "@react-navigation/stack": "^6.3.2",
    "@redux-saga/types": "^1.2.1",
    "@types/react-native-vector-icons": "^6.4.12",
    "@types/react-redux": "^7.1.24",
    "@types/redux-logger": "^3.0.9",
    "babel-plugin-module-resolver": "^4.1.0",
    "prettier": "^2.7.1",
    "react": "18.1.0",
    "react-native": "0.70.3",
    "react-native-config": "^1.4.11",
    "react-native-gesture-handler": "^2.7.1",
    "react-native-safe-area-context": "^4.4.1",
    "react-native-screens": "^3.18.2",
    "react-native-splash-screen": "^3.3.0",
    "react-native-vector-icons": "^9.2.0",
    "react-redux": "^8.0.4",
    "redux": "^4.2.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^26.0.23",
    "@types/react": "^18.0.21",
    "@types/react-native": "^0.70.4",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "0.72.3",
    "react-test-renderer": "18.1.0",
    "typescript": "^4.8.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
